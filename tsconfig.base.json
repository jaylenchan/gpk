{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@gpk/core/*": [
        "./packages/core/src/*"
      ],
      "@gpk/console/*": [
        "./packages/console/src/*"
      ],
      "@gpk/plugin-api/*": [
        "./packages/plugin-api/src/*"
      ],
      "@gpk/plugin-core/*": [
        "./packages/plugin-core/src/*"
      ],
      "@gpk/plugin-registry/*": [
        "./packages/plugin-registry/src/*"
      ]
    }
  }
}