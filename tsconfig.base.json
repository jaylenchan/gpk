{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@gpk/core/*": [
        "./packages/core/src/*"
      ],
      "@gpk/console/*": [
        "./packages/console/src/*"
      ],
      "@gpk/plugin-ext/*": [
        "./packages/plugin-ext/src/*"
      ]
    }
  }
}