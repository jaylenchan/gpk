{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@gpk/core/*": [
        "./packages/core/src/*"
      ],
      "@gpk/p1/*": [
        "./packages/p1/src/*"
      ],
      "@gpk/p2/*": [
        "./packages/p2/src/*"
      ]
    }
  }
}
